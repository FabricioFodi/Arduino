// C++ code
//
// código com bugs

int statusBotao = 0; // declarar uma variavel

void setup()
{
	pinMode(7, INPUT); // entrada 
  	pinMode (10, OUTPUT); // saída
}

void loop()
{
 statusBotao = digitalRead(7); // uso da vairavel
	if(statusBotao == true || false // caso o botao for verdadeiro ou falso...
      ){
    digitalWrite(10, !digitalRead(10)); // digitalWrite= ele vai mandar sinal para porta 10, que é diferente do sinal da digitalRead,
                                        // ou seja, quando dou um click ele acende e quando dou outro click ele apaga.
    }
 
}
